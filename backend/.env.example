# Server Configuration
PORT=8080
GIN_MODE=debug

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/rosamexicano?sslmode=disable
AUTO_MIGRATE=true

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_ACCESS_SECRET=your-access-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-encryption-key-change-in-production

# Asaas Payment Gateway
ASAAS_API_URL=https://sandbox.asaas.com/api/v3
ASAAS_API_KEY=your-sandbox-api-key
ASAAS_WEBHOOK_SECRET=your-webhook-secret

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-app-password

# Frontend CORS
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3000

# Redis
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=1s

# Logging
LOG_LEVEL=debug

# Environment
ENVIRONMENT=development
